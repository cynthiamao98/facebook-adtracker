{
  "name": "Facebook Connect For Chrome Extension",
  "version": "1.0",
  "description": "This plugin is showing how Facebook Graph API works on Chrome Extension.",
  "background":
  {
    "page":"background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":"facebook.png"
  },
  "manifest_version":2,
  "permissions": [
    "tabs",
    "http://*.facebook.com/*",
    "identity"
  ],
	"content_scripts":[
		{
			"matches":[
				"https://*.facebook.com/*"
			],
			"js": ["content.js"]
		}
	]
}
