{
  "name": "Facebook Behavior Tracking",
  "version": "1.0",
  "description": "Using Facebook Graph API and DOM scraping to understand Facebook user behavior",
  "background":
  {
    "page":"background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":"facebook.png"
  },
  "manifest_version":3,
  "permissions": [
    "tabs",
    "http://*.facebook.com/*",
    "identity"
  ],
	"content_scripts":[
		{
			"matches":[
				"https://*.facebook.com/*"
			],
      "css" : ["content.css"],
      "js" : ["content.js"],
      "run_at": "document_idle"
		}
	]
  
}
