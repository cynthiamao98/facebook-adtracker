{
  "name": "Facebook Behavior Tracking",
  "version": "1.0",
  "description": "Using Facebook Graph API and DOM scraping to understand Facebook user behavior",
  "icons": {
    "128": "facebook.png"
  },
  "background":{
    "page": "background.html"
    // "scripts": ["thirdparty/jquery.js", "background.js", "popup.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon":"facebook.png"
  },
  "manifest_version":3,
  "permissions": [
    "tabs",
    "http://localhost:8080/*",
    "http://*/*",
    "https://*/*",
    "http://*.facebook.com/*",
    "identity",
    "storage"
  ],
	"content_scripts":[
		{
			"matches":[
				"https://*.facebook.com/*"
			],
      "css" : ["content.css"],
      "js" : ["content.js"],
      "run_at": "document_idle"
		}
	]
  
}
